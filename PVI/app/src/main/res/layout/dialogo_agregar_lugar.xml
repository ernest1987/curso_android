<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/titulo_formulario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Seleccione todos los campos"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/contenedor_datos_propiedad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo_formulario"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/titulo_recinto"
            style="?android:textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/spinner_recintos"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:layout_marginRight="33dp"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:text="Recinto : * " />

        <TextView
            android:id="@+id/spinner_recintos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/titulo_recinto"
            android:layout_toRightOf="@+id/titulo_recinto" />

        <TextView
            android:id="@+id/titulo_lugar"
            style="?android:textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:layout_alignTop="@+id/spinner_lugar"
            android:text="Lugar : * " />

        <Spinner
            android:id="@+id/spinner_lugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/spinner_recintos"
            android:layout_alignStart="@+id/spinner_recintos"
            android:layout_below="@+id/spinner_recintos"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/titulo_item"
            style="?android:textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:layout_alignTop="@+id/spinner_item"
            android:text="Item : * " />

        <Spinner
            android:id="@+id/spinner_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/spinner_lugar"
            android:layout_alignStart="@+id/spinner_lugar"
            android:layout_below="@+id/spinner_lugar"
            android:layout_marginTop="30dp" />

    </RelativeLayout>
</RelativeLayout>
