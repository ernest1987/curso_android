<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AgregarRequerimento">

    <TextView
        android:id="@+id/titulo_formulario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Ingreso Requerimiento"
        android:textSize="30sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/contenedor_datos_propiedad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bordes"
        android:layout_below="@+id/titulo_formulario"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/titulo_recinto"
            style="?android:textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/spinner_recintos"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="33dp"
            android:layout_marginTop="30dp"
            android:text="Recinto : * " />

        <Spinner
            android:id="@+id/spinner_recintos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/titulo_recinto"
            android:layout_toRightOf="@+id/titulo_recinto" />

        <TextView
            android:id="@+id/titulo_lugar"
            style="?android:textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/spinner_lugar"
            android:text="Lugar : * " />

        <Spinner
            android:id="@+id/spinner_lugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/spinner_recintos"
            android:layout_alignStart="@+id/spinner_recintos"
            android:layout_below="@+id/spinner_recintos"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/titulo_item"
            style="?android:textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/spinner_item"
            android:text="Item : * " />

        <Spinner
            android:id="@+id/spinner_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/spinner_lugar"
            android:layout_alignStart="@+id/spinner_lugar"
            android:layout_below="@+id/spinner_lugar"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/titulo_problema"
            style="?android:textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/spinner_problema"
            android:text="Problema : * " />

        <Spinner
            android:id="@+id/spinner_problema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/spinner_item"
            android:layout_alignStart="@+id/spinner_item"
            android:layout_below="@+id/spinner_item"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/titulo_descripcion"
            style="?android:textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/text_area_descripcion"
            android:text="DescripciÃ³n : * " />

        <EditText
            android:id="@+id/text_area_descripcion"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:layout_alignLeft="@+id/spinner_problema"
            android:layout_alignStart="@+id/spinner_problema"
            android:layout_below="@+id/spinner_problema"
            android:layout_marginTop="30dp" />

        <Button
            android:id="@+id/btn_tomar_fotografia"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="       Tomar Fotografia       "
            android:textStyle="bold"
            android:background="@drawable/btn_rojo_estandar"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/text_area_descripcion"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/btn_selecionar_archivo"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Seleccionar Archivo    "
            android:textStyle="bold"
            android:background="@drawable/btn_rojo_estandar"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/btn_tomar_fotografia"
            android:layout_alignLeft="@+id/btn_tomar_fotografia"
            android:layout_alignStart="@+id/btn_tomar_fotografia" />

        <Button
            android:id="@+id/btn_agregar_requerimiento"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Agregar Requerimiento     "
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_cafe_estandar"
            android:textColor="@color/white"
            android:layout_below="@+id/btn_selecionar_archivo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/foto_tomada"
            android:layout_toRightOf="@+id/titulo_item"
            android:layout_toEndOf="@+id/titulo_item"
            android:layout_alignBottom="@+id/btn_agregar_requerimiento"
            android:layout_alignTop="@+id/btn_tomar_fotografia" />

    </RelativeLayout>
</RelativeLayout>
