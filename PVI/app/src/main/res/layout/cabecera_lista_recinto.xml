<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/linearRecinto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/Gray"
        android:orientation="horizontal"
        android:padding="0dp">

        <ImageView
            android:id="@+id/imgflechaRecinto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/nombre_recinto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imgflechaRecinto"
            android:layout_toRightOf="@+id/imgflechaRecinto"
            android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/btn_agregar_lugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plus_circle_red"
            android:background="@android:color/transparent"
            android:layout_alignTop="@+id/cumple_todo_recinto"
            android:layout_toLeftOf="@+id/agregar_lugar"
            android:layout_toStartOf="@+id/agregar_lugar" />

        <TextView
            android:id="@+id/agregar_lugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/action_agregar_lugar"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_cumple_todo"
            android:layout_toStartOf="@+id/btn_cumple_todo" />

        <ImageButton
            android:id="@+id/btn_cumple_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cumple_todo_des_red"
            android:background="@android:color/transparent"
            android:layout_alignTop="@+id/cumple_todo_recinto"
            android:layout_toLeftOf="@+id/cumple_todo_recinto"
            android:layout_toStartOf="@+id/cumple_todo_recinto" />

        <TextView
            android:id="@+id/cumple_todo_recinto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:paddingRight="5dp"
            android:text="@string/action_cumple_todo"
            android:textColor="@color/black"
            android:textSize="17sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@android:color/white"
        android:orientation="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white" />
</LinearLayout>