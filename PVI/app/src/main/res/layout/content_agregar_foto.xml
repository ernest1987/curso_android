<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DetallarProblema"
    tools:showIn="@layout/activity_agregar_foto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/titulo_problemas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Seleccione los problemas presentados "
                android:textSize="25sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/contendor_problemas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes_negros"
                android:orientation="vertical">


            </LinearLayout>

            <EditText
                android:id="@+id/comentarios_problemas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bordes_negros"
                android:hint="Comentarios"
                android:lines="3"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/titulo_propiedad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Fotografias"
                android:textSize="25sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/scroll_fotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes_negros">

                <LinearLayout
                    android:id="@+id/contendor_fotos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/foto_tomada_1"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        android:src="@drawable/logo_plan_ok_512" />

                    <ImageView
                        android:id="@+id/foto_tomada_2"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        android:src="@drawable/logo_plan_ok_512" />

                    <ImageView
                        android:id="@+id/foto_tomada_3"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        android:src="@drawable/logo_plan_ok_512" />

                    <ImageView
                        android:id="@+id/foto_tomada_4"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        android:src="@drawable/logo_plan_ok_512" />


                </LinearLayout>

            </HorizontalScrollView>

            <Button
                android:id="@+id/btn_seleccionar_imagen"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_agregar_foto"
                android:textStyle="bold"
                android:background="@drawable/btn_azul_estandar"
                android:drawableTop="@drawable/camera_white"
                android:textColor="@color/white"
                android:padding="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/btn_terminar_problemas"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_terminar"
                android:textStyle="bold"
                android:background="@drawable/btn_verde_estandar"
                android:drawableTop="@drawable/check_white"
                android:textColor="@color/white"
                android:padding="15dp" />

            <!--<ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/foto_tomada" />
           <Gallery
                android:id="@+id/gallery"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/foto_tomada"
                android:layout_marginTop="100dp"
                android:layout_width="250dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="250dp"
                android:src="@drawable/logo_plan_ok_512" />-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>
