<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_entrega_terceros"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="planok.cl.android.pvi.EntregaTerceros">

    <TextView
        android:id="@+id/titulo_entrega_terceros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Registro de Entrega a Terceros"
        android:textSize="30sp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_below="@id/titulo_entrega_terceros"
        android:id="@+id/datos_Registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bordes_negros">

        <TextView
            android:id="@+id/txt_nombre_tercero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Nombre"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_rut_tercero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Rut"
            android:layout_marginTop="5dp"
            android:layout_below="@id/txt_nombre_tercero"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_email_tercero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Email"
            android:layout_marginTop="5dp"
            android:layout_below="@id/txt_rut_tercero"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_telefono_celular_tercero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Teléfono Celular"
            android:layout_marginTop="5dp"
            android:layout_below="@id/txt_email_tercero"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_telefono_particular_tercero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Teléfono Particular"
            android:layout_marginTop="5dp"
            android:layout_below="@id/txt_telefono_celular_tercero"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_telefono_comercial_tercero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Teléfono Comercial"
            android:layout_marginTop="5dp"
            android:layout_below="@id/txt_telefono_particular_tercero"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_nombre_tercero"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_telefono_comercial_tercero"
            android:layout_toEndOf="@+id/txt_telefono_comercial_tercero"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_alignBottom="@+id/txt_nombre_tercero"
            android:layout_alignParentTop="true"
            android:background="@drawable/bordes_negros_flat"/>

        <EditText
            android:id="@+id/edit_rut_tercero"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_telefono_comercial_tercero"
            android:layout_toEndOf="@+id/txt_telefono_comercial_tercero"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_alignBottom="@+id/txt_rut_tercero"
            android:layout_alignTop="@+id/txt_rut_tercero"
            android:background="@drawable/bordes_negros_flat"/>

        <EditText
            android:id="@+id/edit_email_tercero"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_telefono_comercial_tercero"
            android:layout_toEndOf="@+id/txt_telefono_comercial_tercero"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_alignBottom="@+id/txt_email_tercero"
            android:layout_alignTop="@+id/txt_email_tercero"
            android:background="@drawable/bordes_negros_flat"/>

        <EditText
            android:id="@+id/edit_telefono_celular_tercero"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_telefono_comercial_tercero"
            android:layout_toEndOf="@+id/txt_telefono_comercial_tercero"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_alignBottom="@+id/txt_telefono_celular_tercero"
            android:layout_alignTop="@+id/txt_telefono_celular_tercero"
            android:background="@drawable/bordes_negros_flat"/>

        <EditText
            android:id="@+id/edit_telefono_particular_tercero"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_telefono_comercial_tercero"
            android:layout_toEndOf="@+id/txt_telefono_comercial_tercero"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_alignBottom="@+id/txt_telefono_particular_tercero"
            android:layout_alignTop="@+id/txt_telefono_particular_tercero"
            android:background="@drawable/bordes_negros_flat"/>

        <EditText
            android:id="@+id/edit_telefono_comercial_tercero"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_telefono_comercial_tercero"
            android:layout_toEndOf="@+id/txt_telefono_comercial_tercero"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_alignBottom="@+id/txt_telefono_comercial_tercero"
            android:layout_alignTop="@+id/txt_telefono_comercial_tercero"
           android:background="@drawable/bordes_negros_flat"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/datos_Registro"
        android:id="@+id/datos_fotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bordes_negros">

        <ImageButton
            android:id="@+id/btn_cedula_identidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/camera_des_gray"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/btn_poder_simple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_cedula_identidad"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/camera_des_gray"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_poder_simple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_poder_simple"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/btn_poder_simple"
            android:layout_toRightOf="@+id/btn_poder_simple"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Poder Simple"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_cedula_identidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_poder_simple"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/btn_cedula_identidad"
            android:layout_toRightOf="@+id/btn_cedula_identidad"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Cédula de Identidad"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_tarjeta_identificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="49dp"
            android:layout_marginStart="49dp"
            android:layout_toEndOf="@+id/txt_cedula_identidad"
            android:layout_toRightOf="@+id/txt_cedula_identidad"
            android:background="@android:color/transparent"
            android:src="@drawable/camera_des_gray"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_tarjeta_identificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_poder_simple"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/btn_tarjeta_identificacion"
            android:layout_toRightOf="@+id/btn_tarjeta_identificacion"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Tarjeta de Identificación"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_fotocopia_cedula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_tarjeta_identificacion"
            android:layout_alignStart="@+id/btn_tarjeta_identificacion"
            android:layout_below="@+id/btn_tarjeta_identificacion"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/camera_des_gray"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_fotocopia_cedula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_fotocopia_cedula"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/btn_fotocopia_cedula"
            android:layout_toRightOf="@+id/btn_fotocopia_cedula"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Fotocopia Cédula Propietario"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/scroll_fotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datos_fotos"
        android:background="@drawable/bordes_negros">

        <LinearLayout
            android:id="@+id/contendor_fotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/foto_tomada_1"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:src="@drawable/logo_plan_ok_512" />

            <ImageView
                android:id="@+id/foto_tomada_2"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:src="@drawable/logo_plan_ok_512" />

            <ImageView
                android:id="@+id/foto_tomada_3"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:src="@drawable/logo_plan_ok_512" />

            <ImageView
                android:id="@+id/foto_tomada_4"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:src="@drawable/logo_plan_ok_512" />


        </LinearLayout>

    </HorizontalScrollView>

    <Button
        android:id="@+id/ir_entrega_terceros"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_entregar"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
