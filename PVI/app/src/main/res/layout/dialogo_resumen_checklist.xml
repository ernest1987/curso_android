<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:padding="10dp" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo_problemas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Baño 1 "
                android:textSize="25sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/contendor_problemas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes_negros">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:text="Accesorio baño "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/textView4"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/textView4"
                    android:gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:text="Espejo"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:text="2"
                    android:layout_alignBaseline="@+id/textView5"
                    android:layout_alignBottom="@+id/textView5"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/textView4"
                    android:layout_toEndOf="@+id/textView4" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_below="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:text="Accesorio baño "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/textView4"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/textView7"
                    android:gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:text="Jabonera"
                    android:layout_below="@+id/textView5"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:text="1"
                    android:layout_alignBaseline="@+id/textView6"
                    android:layout_alignBottom="@+id/textView6"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/textView7"
                    android:layout_toEndOf="@+id/textView7" />


            </RelativeLayout>

            <TextView
                android:id="@+id/titulo_comentarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Comentarios"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/comentarios_problemas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes_negros"
                android:hint="Bla bla bla bla bla"
                android:lines="3"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/titulo_propiedad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Fotografias"
                android:textSize="25sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/scroll_fotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes_negros">

                <LinearLayout
                    android:id="@+id/contendor_fotos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/foto_tomada_1"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        android:src="@drawable/logo_plan_ok_512" />

                    <ImageView
                        android:id="@+id/foto_tomada_2"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        android:src="@drawable/logo_plan_ok_512" />

                    <ImageView
                        android:id="@+id/foto_tomada_3"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        android:src="@drawable/logo_plan_ok_512" />

                    <ImageView
                        android:id="@+id/foto_tomada_4"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        android:src="@drawable/logo_plan_ok_512" />


                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bordes_negros_gordos"
                android:orientation="vertical">
            </LinearLayout>

            <TextView
                android:id="@+id/titulo_problemas_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Cocina 1 "
                android:textSize="25sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/contendor_problemas_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes_negros">

                <TextView
                    android:id="@+id/textView5_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:text="Encimera "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/textView4_1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/textView4_1"
                    android:gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:text="Chispero"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:text="1"
                    android:layout_alignBaseline="@+id/textView5_1"
                    android:layout_alignBottom="@+id/textView5_1"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/textView4_1"
                    android:layout_toEndOf="@+id/textView4_1" />


            </RelativeLayout>

            <TextView
                android:id="@+id/titulo_comentarios_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Comentarios"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/comentarios_problemas_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes_negros"
                android:hint="Bla bla bla bla bla"
                android:lines="3"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/titulo_propiedad_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Fotografias"
                android:textSize="25sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/scroll_fotos_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes_negros">

                <LinearLayout
                    android:id="@+id/contendor_fotos_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/foto_tomada_1_1"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        android:src="@drawable/logo_plan_ok_512" />

                    <ImageView
                        android:id="@+id/foto_tomada_2_1"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        android:src="@drawable/logo_plan_ok_512" />

                    <ImageView
                        android:id="@+id/foto_tomada_3_1"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        android:src="@drawable/logo_plan_ok_512" />

                    <ImageView
                        android:id="@+id/foto_tomada_4_1"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        android:src="@drawable/logo_plan_ok_512" />


                </LinearLayout>

            </HorizontalScrollView>

            <!--<ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/foto_tomada" />
           <Gallery
                android:id="@+id/gallery"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/foto_tomada"
                android:layout_marginTop="100dp"
                android:layout_width="250dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="250dp"
                android:src="@drawable/logo_plan_ok_512" />-->
        </LinearLayout>
    </ScrollView>

</LinearLayout>