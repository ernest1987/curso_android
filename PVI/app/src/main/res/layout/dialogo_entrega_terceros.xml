<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_entrega_terceros"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="planok.cl.android.pvi.EntregaTerceros">


    <RelativeLayout
        android:id="@+id/datos_Registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bordes_negros">

        <TextView
            android:id="@+id/txt_nombre_tercero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Nombre"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_rut_tercero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Rut"
            android:layout_marginTop="5dp"
            android:layout_below="@id/txt_nombre_tercero"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_email_tercero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Email"
            android:layout_marginTop="5dp"
            android:layout_below="@id/txt_rut_tercero"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_telefono_celular_tercero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Teléfono Celular"
            android:layout_marginTop="5dp"
            android:layout_below="@id/txt_email_tercero"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_telefono_particular_tercero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Teléfono Particular"
            android:layout_marginTop="5dp"
            android:layout_below="@id/txt_telefono_celular_tercero"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_telefono_comercial_tercero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Teléfono Comercial"
            android:layout_marginTop="5dp"
            android:layout_below="@id/txt_telefono_particular_tercero"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_nombre_tercero"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_telefono_comercial_tercero"
            android:layout_toEndOf="@+id/txt_telefono_comercial_tercero"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:text="Recepciones de propiedas S.A"
            android:textColor="@color/black"
            android:enabled="false"
            android:padding="3dp"
            android:layout_alignBottom="@+id/txt_nombre_tercero"
            android:layout_alignParentTop="true"
            android:background="@drawable/bordes_negros_flat"/>

        <EditText
            android:id="@+id/edit_rut_tercero"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_telefono_comercial_tercero"
            android:layout_toEndOf="@+id/txt_telefono_comercial_tercero"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:text="75.869.251-6"
            android:textColor="@color/black"
            android:enabled="false"
            android:padding="3dp"
            android:layout_alignBottom="@+id/txt_rut_tercero"
            android:layout_alignTop="@+id/txt_rut_tercero"
            android:background="@drawable/bordes_negros_flat"/>

        <EditText
            android:id="@+id/edit_email_tercero"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_telefono_comercial_tercero"
            android:layout_toEndOf="@+id/txt_telefono_comercial_tercero"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:text="texto@planok.com"
            android:textColor="@color/black"
            android:enabled="false"
            android:padding="3dp"
            android:layout_alignBottom="@+id/txt_email_tercero"
            android:layout_alignTop="@+id/txt_email_tercero"
            android:background="@drawable/bordes_negros_flat"/>

        <EditText
            android:id="@+id/edit_telefono_celular_tercero"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_telefono_comercial_tercero"
            android:layout_toEndOf="@+id/txt_telefono_comercial_tercero"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:text="+569798844110"
            android:textColor="@color/black"
            android:enabled="false"
            android:padding="3dp"
            android:layout_alignBottom="@+id/txt_telefono_celular_tercero"
            android:layout_alignTop="@+id/txt_telefono_celular_tercero"
            android:background="@drawable/bordes_negros_flat"/>

        <EditText
            android:id="@+id/edit_telefono_particular_tercero"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_telefono_comercial_tercero"
            android:layout_toEndOf="@+id/txt_telefono_comercial_tercero"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:text="+562336978410"
            android:textColor="@color/black"
            android:enabled="false"
            android:padding="3dp"
            android:layout_alignBottom="@+id/txt_telefono_particular_tercero"
            android:layout_alignTop="@+id/txt_telefono_particular_tercero"
            android:background="@drawable/bordes_negros_flat"/>

        <EditText
            android:id="@+id/edit_telefono_comercial_tercero"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_telefono_comercial_tercero"
            android:layout_toEndOf="@+id/txt_telefono_comercial_tercero"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:text="+5687940054854"
            android:textColor="@color/black"
            android:enabled="false"
            android:padding="3dp"
            android:layout_alignBottom="@+id/txt_telefono_comercial_tercero"
            android:layout_alignTop="@+id/txt_telefono_comercial_tercero"
           android:background="@drawable/bordes_negros_flat"/>


    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/scroll_fotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datos_Registro"
        android:background="@drawable/bordes_negros">

        <LinearLayout
            android:id="@+id/contendor_fotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/foto_tomada_1"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:src="@drawable/logo_plan_ok_512" />

            <ImageView
                android:id="@+id/foto_tomada_2"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:src="@drawable/logo_plan_ok_512" />

            <ImageView
                android:id="@+id/foto_tomada_3"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:src="@drawable/logo_plan_ok_512" />

            <ImageView
                android:id="@+id/foto_tomada_4"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:src="@drawable/logo_plan_ok_512" />


        </LinearLayout>

    </HorizontalScrollView>


</RelativeLayout>
